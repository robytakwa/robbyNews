<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="article"
            type="com.robby.news.source.news.ArticleModel" />

        <variable
            name="format"
            type="com.robby.news.util.FormatUtil" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10_dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/border"
            android:layout_width="@dimen/width_zero_dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/padding_10_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:loadImage="@{article.urlToImage}"
                tools:src="@drawable/example" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/published_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="@dimen/padding_10_dp"
            android:paddingTop="@dimen/margin_5_dp"
            android:text="@{format.dateFormat(article.publishedAt.toString())}"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_12_sp"
            app:layout_constraintStart_toStartOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/border"
            tools:ignore="SmallSp"
            tools:text="Mar, 04 2021" />

        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/width_zero_dp"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_10_dp"
            android:paddingEnd="@dimen/padding_10_dp"
            android:text="@{article.title}"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16_sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/published_at"
            tools:text="2 deputies shot outside Salt Lake Co. Sheriff's Office in South Salt Lake - fox13now.com" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
